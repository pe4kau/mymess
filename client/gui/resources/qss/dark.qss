/* Dark theme */
QMainWindow { background: #121212; color: #e5e5e5; }
QLabel#chatTitle { font-size: 18px; font-weight: 600; color: #e5e5e5; }
QLabel#chatStatus { color: #9aa0a6; }
QListView { border: none; color: #e5e5e5; }
QLineEdit { border: 1px solid #333; border-radius: 8px; padding: 6px 8px; background: #1e1e1e; color: #e5e5e5; }
QPushButton { padding: 6px 12px; border: 1px solid #444; border-radius: 10px; background: #1f1f1f; color: #e5e5e5; }
QPushButton:hover { background: #2a2a2a; }
